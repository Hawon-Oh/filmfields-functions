{
  "name": "firebase-video-search-functions",
  "version": "1.0.0",
  "description": "Firebase Functions v2 for video search engine with OpenAI and Pinecone",
  "main": "src/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "node src/test-vector-storage.js",
    "dev": "nodemon --watch src --exec firebase emulators:start"
  },
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "@pinecone-database/pinecone": "^6.1.0",
    "dotenv": "^16.6.1",
    "firebase-admin": "^11.8.0",
    "firebase-functions": "^4.3.1",
    "openai": "^4.0.0"
  },
  "devDependencies": {
    "firebase-functions-test": "^3.1.0"
  },
  "private": true
}
